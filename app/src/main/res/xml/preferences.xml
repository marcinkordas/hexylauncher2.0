<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_category_appearance">

        <SwitchPreferenceCompat
            app:key="show_labels"
            app:title="@string/pref_show_labels_title"
            app:summary="@string/pref_show_labels_summary"
            app:defaultValue="true" />

        <ListPreference
            app:key="grid_size"
            app:title="@string/pref_grid_size_title"
            app:summary="%s"
            app:entries="@array/grid_size_entries"
            app:entryValues="@array/grid_size_values"
            app:defaultValue="4" />

    </PreferenceCategory>

</PreferenceScreen>